{{#if products}}
        <div>
           <p>
               

           </p>
        </div>
    <div class="row">
        <div class="col-md-12">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">{{session.cart.totalQty}}</span>
          </h4>
          <ul class="list-group mb-3">
            {{#each products}}
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">{{this.item.title}}</h6>
                <small class="text-muted">{{this.item.description}}</small>
              </div>
              <span class="text-muted">${{this.item.price}}</span>
            </li>
            {{/each}}
            <li class="list-group-item d-flex justify-content-between">
              <strong>Total (USD)</strong>
              <strong>${{this.totalPrice}}</strong>
            </li>
          </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-success">Checkout</button>
        </div>
    </div>
{{else}}
        <div>
            <p>
               

           </p>
           <h3>No Items in the cart.</h3>
        </div>

{{/if}}